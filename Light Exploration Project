//Code used from NeoPixel LED Generator website
//Edited by Sadiq Malik

int motorPin1 = 12;
int motorPin2 = 7;

#include <Adafruit_NeoPixel.h>

class Strip
{
public:
  uint8_t   effect;
  uint8_t   effects;
  uint16_t  effStep;
  unsigned long effStart;
  Adafruit_NeoPixel strip;
  Strip(uint16_t leds, uint8_t pin, uint8_t toteffects, uint16_t striptype) : strip(leds, pin, striptype) {
    effect = -1;
    effects = toteffects;
    Reset();
  }
  void Reset(){
    effStep = 0;
    effect = (effect + 1) % effects;
    effStart = millis();
  }
};

struct Loop
{
  uint8_t currentChild;
  uint8_t childs;
  bool timeBased;
  uint16_t cycles;
  uint16_t currentTime;
  Loop(uint8_t totchilds, bool timebased, uint16_t tottime) {currentTime=0;currentChild=0;childs=totchilds;timeBased=timebased;cycles=tottime;}
};

Strip strip_0(24, 9, 24, NEO_GRB + NEO_KHZ800);
struct Loop strip0loop0(1, false, 1);
struct Loop strip0loop00(1, false, 1);

//[GLOBAL_VARIABLES]

void setup() {

pinMode(motorPin1, OUTPUT);
pinMode(motorPin2, OUTPUT);

  strip_0.strip.begin();
}

void loop() {

  //Your code here:

  strips_loop();
}

void strips_loop() {
  if(strip0_loop0() & 0x01)
    strip_0.strip.show();
}

uint8_t strip0_loop0() {
  uint8_t ret = 0x00;
  switch(strip0loop0.currentChild) {
    case 0: 
           ret = strip0_loop00();break;
  }
  if(ret & 0x02) {
    ret &= 0xfd;
    if(strip0loop0.currentChild + 1 >= strip0loop0.childs) {
      strip0loop0.currentChild = 0;
      if(++strip0loop0.currentTime >= strip0loop0.cycles) {strip0loop0.currentTime = 0; ret |= 0x02;}
    }
    else {
      strip0loop0.currentChild++;
    }
  };
  return ret;
}

uint8_t strip0_loop00() {
  uint8_t ret = 0x00;
  switch(strip0loop00.currentChild) {
    case 0: 
           ret = strip0_loop00_eff0();break;
  }
  if(ret & 0x02) {
    ret &= 0xfd;
    if(strip0loop00.currentChild + 1 >= strip0loop00.childs) {
      strip0loop00.currentChild = 0;
      if(++strip0loop00.currentTime >= strip0loop00.cycles) {strip0loop00.currentTime = 0; ret |= 0x02;}
    }
    else {
      strip0loop00.currentChild++;
    }
  };
  return ret;
}

uint8_t strip0_loop00_eff0() {
    // Strip ID: 0 - Effect: Rainbow - LEDS: 24
    // Steps: 114 - Delay: 29
    // Colors: 3 (255.0.153, 175.255.0, 0.165.255)
    // Options: rainbowlen=119, toLeft=false, 
  if(millis() - strip_0.effStart < 29 * (strip_0.effStep)) return 0x00;
  float factor1, factor2;
  uint16_t ind;
  for(uint16_t j=0;j<24;j++) {
    ind = 114 - (uint16_t)(strip_0.effStep - j * 0.957983193277311) % 114;
    switch((int)((ind % 114) / 38)) {
      case 0: factor1 = 1.0 - ((float)(ind % 114 - 0 * 38) / 38);
              factor2 = (float)((int)(ind - 0) % 114) / 38;
              strip_0.strip.setPixelColor(j, 255 * factor1 + 175 * factor2, 0 * factor1 + 255 * factor2, 153 * factor1 + 0 * factor2);
              break;
      case 1: factor1 = 1.0 - ((float)(ind % 114 - 1 * 38) / 38);
              factor2 = (float)((int)(ind - 38) % 114) / 38;
              strip_0.strip.setPixelColor(j, 175 * factor1 + 0 * factor2, 255 * factor1 + 165 * factor2, 0 * factor1 + 255 * factor2);
              break;
      case 2: factor1 = 1.0 - ((float)(ind % 114 - 2 * 38) / 38);
              factor2 = (float)((int)(ind - 76) % 114) / 38;
              strip_0.strip.setPixelColor(j, 0 * factor1 + 255 * factor2, 165 * factor1 + 0 * factor2, 255 * factor1 + 153 * factor2);
              break;
    }
  }
  if(strip_0.effStep >= 114) {strip_0.Reset(); return 0x03; }
  else strip_0.effStep++;
  return 0x01;
}
